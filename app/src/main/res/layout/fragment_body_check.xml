<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF000000"
    tools:context=".ui.checkbody.BodyCheckFragment">

    <SurfaceView
        android:id="@+id/check_body_surfaceView"
        android:layout_width="390dp"
        android:layout_height="685dp"
        android:layout_marginLeft="10.5dp"

        />


    <Button
        android:id="@+id/check_body_take_photo"
        android:layout_width="299dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/check_body_surfaceView"
        android:layout_marginLeft="6dp"
        android:text="Shoot"/>

    <Button
        android:id="@+id/body_check_focus"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/check_body_surfaceView"
        android:layout_toRightOf="@id/check_body_take_photo"
        android:text="Focusing" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/silhouetteremovebg" />


</RelativeLayout>