<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".ui.bmi.BMIFragment">

    <TextView
        android:id="@+id/bmi_announcement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="40dp"
        android:text="키, 몸무게를 입력하세요."
        android:textSize="20sp" />

    <TextView
        android:id="@+id/bmi_height"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/bmi_announcement"
        android:text="키"
        android:textSize="25sp" />

    <EditText
        android:id="@+id/bmi_height_input"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bmi_announcement"
        android:layout_toRightOf="@+id/bmi_height"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="19dp"
        android:inputType="number"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/bmi_height_unit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/bmi_announcement"
        android:layout_toRightOf="@id/bmi_height_input"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="19dp"
        android:text="(cm)"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/bmi_weight"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="19dp"
        android:layout_below="@+id/bmi_height"
        android:text="몸무게"
        android:textSize="25sp" />

    <EditText
        android:id="@+id/bmi_weight_input"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bmi_height"
        android:layout_toRightOf="@+id/bmi_weight"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="19dp"
        android:inputType="number"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/bmi_weight_unit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/bmi_height"
        android:layout_toRightOf="@id/bmi_weight_input"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="19dp"
        android:text="(kg)"
        android:textSize="25sp" />

    <Button
        android:id="@+id/bmi_result_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/bmi_weight"
        android:layout_marginLeft="36dp"
        android:layout_marginTop="40dp"
        android:layout_toRightOf="@id/bmi_weight"
        android:text="입력"
        android:textSize="25sp" />

    <ImageView
        android:id="@+id/bmi_image"
        android:layout_below="@id/bmi_result_button"
        android:layout_marginTop="50dp"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/bmi_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/bmi_image"
        android:layout_marginTop="30dp"
        android:textSize="30dp"
        android:layout_centerHorizontal="true"/>


</RelativeLayout>
</ScrollView>